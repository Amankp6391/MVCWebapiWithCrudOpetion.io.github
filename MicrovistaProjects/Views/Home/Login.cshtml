@model MicrovistaProjects.Models.ViewModel.LoginViewModel

<!-- Custom CSS for styling -->
<style>
    body {
        background: linear-gradient(135deg, #71b7e6, #9b59b6);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        width: 100%;
        max-width: 380px;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #34495e;
        }

        .login-card::before {
            content: "";
            position: absolute;
            width: 200%;
            height: 100%;
            top: -50%;
            left: -50%;
            background: radial-gradient(circle at 0% 100%, #6a82fb, #fc5c7d);
            z-index: -1;
            transform: rotate(45deg);
            opacity: 0.2;
        }

    .form-control {
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 1rem;
        box-shadow: none;
        border: 1px solid #ddd;
        margin-bottom: 1rem;
    }

        .form-control:focus {
            border-color: #9b59b6;
            box-shadow: none;
        }

    .btn-primary {
        width: 100%;
        border-radius: 25px;
        padding: 10px;
        background: #6a82fb;
        background: linear-gradient(to right, #6a82fb, #fc5c7d);
        border: none;
        color: #fff;
        font-size: 1rem;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #fc5c7d, #6a82fb);
        }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="container login-container">
    <div class="login-card">
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.User, new { @class = "sr-only" }) <!-- Hide label, use placeholder -->
                @Html.TextBoxFor(m => m.User, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "sr-only" }) <!-- Hide label, use placeholder -->
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        }
    </div>
</div>
