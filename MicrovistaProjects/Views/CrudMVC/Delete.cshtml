@model MicrovistaProjects.Models.Student

@{
    ViewBag.Title = "Delete";
}

<!-- Custom CSS for styling -->
<style>
    .delete-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 0 auto;
        text-align: left;
    }

        .delete-container h2,
        .delete-container h3 {
            text-align: center;
            color: #dc3545;
        }

        .delete-container h2 {
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
        }

        .delete-container dl dt {
            font-weight: bold;
            color: #333;
            margin-top: 1rem;
        }

        .delete-container dl dd {
            margin-left: 0;
            margin-bottom: 1rem;
            font-size: 1rem;
            color: #555;
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 0.5rem;
        }

        .delete-container .form-actions {
            text-align: center;
            margin-top: 2rem;
        }

        .delete-container .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            text-transform: uppercase;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.2);
        }

            .delete-container .btn-delete:hover {
                background-color: #c82333;
                box-shadow: 0 7px 20px rgba(220, 53, 69, 0.4);
            }

        .delete-container .btn-link {
            text-decoration: none;
            color: #007bff;
            font-weight: 600;
            margin-left: 10px;
        }

            .delete-container .btn-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }
</style>

<div class="container mt-5">
    <div class="delete-container">
        <h2>Delete Student</h2>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.dob)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.dob)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.address)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-delete" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-link" })
            </div>
        }
    </div>
</div>
